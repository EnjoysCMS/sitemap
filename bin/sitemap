#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;

$autoloadPaths = array(
    __DIR__ . '/../../../vendor/autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/vendor/autoload.php'
);
foreach ($autoloadPaths as $autoloadFile) {
    if (file_exists($autoloadFile)) {
        require_once $autoloadFile;
        break;
    }
}

$application = new Application();

$application->run();
